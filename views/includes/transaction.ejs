<% layout("layouts/boilerplate") %>


<div class="modal fade" id="addTransactionModal" tabindex="-1" aria-labelledby="addTransactionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-custom">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold" id="addTransactionModalLabel">
                    <i class="fas fa-plus-circle me-2"></i>Add New Transaction
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <form>
                    <!-- Transaction Name -->
                    <div class="mb-4">
                        <label for="transactionName" class="form-label fw-semibold">
                            <i class="fas fa-tag me-2 text-primary"></i>Transaction Name
                        </label>
                        <input type="text" class="form-control form-control-lg" id="transactionName" placeholder="e.g., Groceries, Salary" required>
                    </div>

                    <!-- Transaction Type (Income/Expense) -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-exchange-alt me-2 text-primary"></i>Transaction Type
                        </label>
                        <div class="transaction-type-selector">
                            <div class="form-check form-check-custom">
                                <input class="form-check-input" type="radio" name="transactionType" id="typeIncome" value="income">
                                <label class="form-check-label" for="typeIncome">
                                    <div class="type-option income-option">
                                        <i class="fas fa-arrow-up"></i>
                                        <span>Income</span>
                                    </div>
                                </label>
                            </div>
                            <div class="form-check form-check-custom">
                                <input class="form-check-input" type="radio" name="transactionType" id="typeExpense" value="expense" checked>
                                <label class="form-check-label" for="typeExpense">
                                    <div class="type-option expense-option">
                                        <i class="fas fa-arrow-down"></i>
                                        <span>Expense</span>
                                    </div>
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Transaction Amount -->
                    <div class="mb-4">
                        <label for="transactionAmount" class="form-label fw-semibold">
                            <i class="fas fa-rupee-sign me-2 text-primary"></i>Amount
                        </label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text">â‚¹</span>
                            <input type="number" class="form-control" id="transactionAmount" placeholder="0.00" step="0.01" min="0" required>
                        </div>
                    </div>

                    <!-- Transaction Date -->
                    <div class="mb-4">
                        <label for="transactionDate" class="form-label fw-semibold">
                            <i class="fas fa-calendar-alt me-2 text-primary"></i>Date
                        </label>
                        <input type="date" class="form-control form-control-lg" id="transactionDate" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-primary">
                    <i class="fas fa-check me-2"></i>Add Transaction
                </button>
            </div>
        </div>
    </div>
</div>

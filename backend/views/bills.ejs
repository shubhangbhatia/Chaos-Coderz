<% layout("layouts/boilerplate") %>

    <div class="container-fluid px-0">
        <div class="row g-4 mt-4">
            <div class="col-lg-8 mx-auto">
                <div class="card border-0 shadow-lg fade-in-up">
                    <div class="card-body p-5">
                        <h2 class="card-title fw-bold mb-5">
                            <i class="fas fa-file-invoice-dollar me-2 text-primary"></i>Create New Bill
                        </h2>

                        <form class="needs-validation" action="/add-bill" method="POST" novalidate id="orderForm">
                            <!-- Bill/Order Name -->
                            <div class="mb-4">
                                <label for="orderName" class="form-label fw-semibold">
                                    <i class="fas fa-shopping-bag me-2 text-primary"></i>Order / Customer Name
                                </label>
                                <input type="text" class="form-control form-control-lg" id="orderName" name="orderName"
                                    placeholder="e.g., Client Alpha - Web Design" required minlength="3"
                                    maxlength="100">
                                <div class="invalid-feedback">
                                    Please provide a valid name (3-100 characters).
                                </div>
                            </div>

                            <!-- Bill Amount -->
                            <div class="mb-4">
                                <label for="billAmount" class="form-label fw-semibold">
                                    <i class="fas fa-rupee-sign me-2 text-primary"></i>Bill Amount
                                </label>
                                <div class="input-group input-group-lg has-validation">
                                    <span class="input-group-text">â‚¹</span>
                                    <input type="number" class="form-control" id="billAmount" name="billAmount"
                                        placeholder="0.00" step="0.01" min="0.01" required>
                                    <div class="invalid-feedback">
                                        Please provide a valid amount greater than 0.
                                    </div>
                                </div>
                            </div>

                            <!-- Bill Status -->
                            <div class="mb-4">
                                <p class="form-label fw-semibold mb-2">
                                    <i class="fas fa-tasks me-2 text-primary"></i>Initial Status
                                </p>
                                <div class="transaction-type-selector">
                                    <div class="form-check form-check-custom">
                                        <input class="form-check-input" type="radio" name="orderStatus"
                                            id="statusPending" value="pending" checked required>
                                        <label class="form-check-label" for="statusPending">
                                            <div class="type-option expense-option">
                                                <i class="fas fa-clock"></i>
                                                <span>Pending</span>
                                            </div>
                                        </label>
                                    </div>
                                    <div class="form-check form-check-custom">
                                        <input class="form-check-input" type="radio" name="orderStatus" id="statusPaid"
                                            value="paid" required>
                                        <label class="form-check-label" for="statusPaid">
                                            <div class="type-option income-option">
                                                <i class="fas fa-check-double"></i>
                                                <span>Paid</span>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <!-- Due Date -->
                            <div class="mb-4">
                                <label for="dueDate" class="form-label fw-semibold">
                                    <i class="fas fa-calendar-exclamation me-2 text-primary"></i>Due Date
                                </label>
                                <input type="date" class="form-control form-control-lg" id="dueDate" name="dueDate"
                                    required>
                                <div class="form-text mt-2">
                                    <i class="fas fa-info-circle me-1"></i> Notification will be sent on this date.
                                </div>
                                <div class="invalid-feedback">
                                    Please select a due date.
                                </div>
                            </div>

                            <!-- Buttons -->
                            <div class="d-flex gap-3 mt-5">
                                <a href="/" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-check me-2"></i>Generate Bill
                                </button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
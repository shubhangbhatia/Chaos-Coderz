<script>
function toggleChallenge(id){const c=document.getElementById('content-'+id),i=document.getElementById('icon-'+id);if(c.style.maxHeight){c.style.maxHeight=null;i.style.transform='rotate(0deg)'}else{c.style.maxHeight=c.scrollHeight+'px';i.style.transform='rotate(180deg)'}}
document.getElementById('helpSearch')?.addEventListener('input',function(e){const s=e.target.value.toLowerCase();document.querySelectorAll('.help-topic-section').forEach(section=>{section.style.display=section.textContent.toLowerCase().includes(s)||s===''?'block':'none'})});
document.querySelectorAll('.quick-nav-card').forEach(card=>{card.addEventListener('click',function(e){e.preventDefault();document.querySelector(this.getAttribute('href')).scrollIntoView({behavior:'smooth',block:'start'})})});
</script>

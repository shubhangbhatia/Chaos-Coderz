<% layout("layouts/boilerplate") %>

    <div class="container-fluid px-0">
        <div class="row g-4 mt-4">
            <div class="col-lg-8 mx-auto">
                <div class="card border-0 shadow-lg fade-in-up">
                    <div class="card-body p-5">
                        <h2 class="card-title fw-bold mb-5">
                            <i class="fas fa-plus-circle me-2"></i>Add New Transaction
                        </h2>

                        <form class="needs-validation" action="/transaction" method="POST" novalidate>
                            <!-- Transaction Name -->
                            <div class="mb-4">
                                <label for="transactionName" class="form-label fw-semibold">
                                    <i class="fas fa-tag me-2 text-primary"></i>Transaction Name
                                </label>
                                <input type="text" class="form-control form-control-lg" id="transactionName"
                                    name="transactionName" placeholder="e.g., Groceries, Salary" required minlength="3"
                                    maxlength="50">
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please provide a valid transaction name (3-50 characters).
                                </div>
                            </div>

                            <!-- Transaction Type (Income/Expense) -->
                            <div class="mb-4">
                                <p class="form-label fw-semibold mb-2">
                                    <i class="fas fa-exchange-alt me-2 text-primary"></i>Transaction Type
                                </p>
                                <div class="transaction-type-selector">
                                    <div class="form-check form-check-custom">
                                        <input class="form-check-input" type="radio" name="transactionType"
                                            id="typeIncome" value="income" required>
                                        <label class="form-check-label" for="typeIncome">
                                            <div class="type-option income-option">
                                                <i class="fas fa-arrow-up"></i>
                                                <span>Income</span>
                                            </div>
                                        </label>
                                    </div>
                                    <div class="form-check form-check-custom">
                                        <input class="form-check-input" type="radio" name="transactionType"
                                            id="typeExpense" value="expense" required checked>
                                        <label class="form-check-label" for="typeExpense">
                                            <div class="type-option expense-option">
                                                <i class="fas fa-arrow-down"></i>
                                                <span>Expense</span>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                                <div class="invalid-feedback d-block">
                                    Please select a transaction type.
                                </div>
                            </div>

                            <!-- Transaction Amount -->
                            <div class="mb-4">
                                <label for="transactionAmount" class="form-label fw-semibold">
                                    <i class="fas fa-rupee-sign me-2 text-primary"></i>Amount
                                </label>
                                <div class="input-group input-group-lg has-validation">
                                    <span class="input-group-text">â‚¹</span>
                                    <input type="number" class="form-control" id="transactionAmount"
                                        name="transactionAmount" placeholder="0.00" step="0.01" min="0.01" required>
                                    <div class="invalid-feedback">
                                        Please provide a valid amount greater than 0.
                                    </div>
                                </div>
                            </div>

                            <!-- Transaction Date -->
                            <div class="mb-4">
                                <label for="transactionDate" class="form-label fw-semibold">
                                    <i class="fas fa-calendar-alt me-2 text-primary"></i>Date
                                </label>
                                <input type="date" class="form-control form-control-lg" id="transactionDate"
                                    name="transactionDate" required max="<%= new Date().toISOString().split('T')[0] %>">
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please provide a valid date.
                                </div>
                            </div>

                            <!-- Buttons -->
                            <div class="d-flex gap-3 mt-5">
                                <a href="/" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-check me-2"></i>Add Transaction
                                </button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>